<?php

/**
 * Implements hook_page_attachments().
 */
function webmaster_local_staff_page_attachments(array &$attachments) {
  // Get current route.
  $route_name = \Drupal::routeMatch()->getRouteName();

  // Check for your specific route.
  if ($route_name === 'view.staff.page_1') {
    $attachments['#attached']['library'][] = 'webmaster_local_staff/webmaster_local_staff';
  }

}

/**
 * Implements hook_views_pre_render().
 */
function webmaster_local_staff_views_pre_render(\Drupal\views\ViewExecutable $view) {
  // Check if this is the right View and display.
  if ($view->id() === 'staff' && $view->current_display === 'page_1') {
    // Add a custom header before the rows.
    $view->attachment_before[] = [
      '#type' => 'html_tag',
      '#tag' => 'header',
      '#value' => '<h1>' . t('Personalet pÃ¥ bibliotekerne') . '</h1>',
      '#attributes' => ['class' => ['staff-header']],
    ];
  }
}

